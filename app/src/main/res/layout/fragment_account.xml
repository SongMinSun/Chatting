<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:scaleType="centerCrop"
        android:src="@drawable/account_title" />

    <ImageView
        android:id="@+id/profile_modify_txt"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:scaleType="centerCrop"
        android:src="@drawable/profile_modify" />

    <ImageView
        android:id="@+id/accountFragment_imageview_profile"
        android:layout_width="wrap_content"
        android:layout_height="133dp"
        android:layout_margin="20dp"
        android:src="@drawable/icon" />

    <Button
        android:id="@+id/accountFragment_button_name"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:text="이름 수정"
        android:textSize="25dp"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:layout_marginStart="10dp"
        android:backgroundTint="@color/yellow"
        android:layout_marginEnd="10dp"
        android:background="@drawable/rounded_button"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/accountFragment_button_comment"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:text="상태 메시지 수정"
        android:textSize="25dp"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:layout_marginStart="10dp"
        android:backgroundTint="@color/yellow"
        android:layout_marginEnd="10dp"
        android:background="@drawable/rounded_button"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/accountFragment_button_password"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:text="비밀번호 변경"
        android:textSize="25dp"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:layout_marginStart="10dp"
        android:backgroundTint="@color/blue"
        android:layout_marginEnd="10dp"
        android:background="@drawable/rounded_button"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/logout_button"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:text="로그아웃"
        android:textSize="25dp"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:layout_marginStart="10dp"
        android:backgroundTint="#AFAFAF"
        android:layout_marginEnd="10dp"
        android:background="@drawable/rounded_button"
        android:textStyle="bold"/>

</LinearLayout>