<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.chatty.fragment.SelectFriendActivity"
    android:background="@color/white">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:scaleType="centerCrop"
        android:src="@drawable/chat_title" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="161dp"
        android:scaleType="centerCrop"
        android:src="@drawable/choose" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp">

        <ImageView
            android:layout_width="114dp"
            android:layout_height="match_parent"
            android:layout_marginStart="30dp"
            android:scaleType="centerCrop"
            android:src="@drawable/group_name" />

        <EditText
            android:id="@+id/roomname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:hint="채팅방 이름을 입력하세요"
            tools:ignore="TouchTargetSizeCheck"
            android:layout_marginEnd="50dp"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/selectFriendActivity_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="358dp"
        android:background="@color/white"></androidx.recyclerview.widget.RecyclerView>


    <Button
        android:id="@+id/selectFriendActivity_button"
        android:layout_width="236dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:text="채팅방 만들기"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:backgroundTint="@color/blue"
        android:background="@drawable/rounded_button"
        android:textStyle="bold"/>
</LinearLayout>